#!/bin/bash
rofi \
    -modi window \
    -show window \
    -display-window 'Switch to' \
    -show-icons \
    -lines 4 -location 0 -width 40 -sort \
    -window-format '{c:20} {t:40} {w}' \
    -color-window '#DDDDDD, #000000, #000000' \
    -color-normal '#DDDDDD, #3C7D25, #DDDDDD, #3C7D25, #EEEEEE' \
    -color-active '#EEEEEE, #3C7D25, #EEEEEE, #3C7D25, #FFFFFF' \
    -color-urgent '#DDDDDD, #3C7D25, #DDDDDD, #3C7D25, #EEEEEE'
