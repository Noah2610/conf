#!/bin/sh

set -e

function err {
    ( >&2 echo -e "[Error]\n$1" )
    exit 1
}

command -v "rofi" > /dev/null 2>&1 || err "rofi is not installed"
[ -f "/usr/lib/rofi/emoji.so" ] || err "rofi-emoji is not installed"

rofi \
    -modi emoji \
    -show emoji \
    -theme emojipicker \
    -emoji-mode copy
