#!/bin/bash
# Searches for my ruby profilerb script and tries to run it.

function err {
    ( 1>&2 echo -e "[Error] $1" )
    exit 1
}

function check_file {
    local file="$1"
    [ -f "$file" ] || err "File not found ${file}"
}

function main {
    local script="${HOME}/Projects/Ruby/ProfileRB/profile.rb"
    check_file "$script"
    $script "$@"
}

main "$@"
