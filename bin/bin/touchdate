#!/bin/bash

HELP=$( cat <<END
Creates a file with the name of the current date,
in the format "YYYY-MM-DD".

Options
  --help, -h
    Print this usage text and exit.
  --prefix PREFIX, -p PREFIX
    Prefixes the file name with PREFIX.
  --suffix SUFFIX, -s SUFFIX
    Suffixes the file name with SUFFIX.
  --format FORMAT, -f FORMAT
    Set the date format, in the \`date\` command's format.
    Default: "%Y-%m-%d"
END
)

set -e

PREFIX=
SUFFIX=
DATE_FORMAT="%Y-%m-%d"

function err {
    ( 1>&2 echo "$@" )
    exit 1
}

function parse_args {
    while [ -n "$1" ]; do
        case "$1" in
            "--help"|"-h")
                echo "$HELP"
                exit 0
                ;;
            "--prefix"|"-p")
                PREFIX="$2"
                shift || true
                ;;
            "--suffix"|"-s")
                SUFFIX="$2"
                shift || true
                ;;
            "--format"|"-f")
                DATE_FORMAT="$2"
                shift || true
                ;;
            *)
                err "Invalid argument: $1"
                ;;
        esac
        shift || true
    done

    # Validate parsed arguments
    [ -n "$DATE_FORMAT" ] || err "Invalid date format: $DATE_FORMAT"
}

function main {
    parse_args "$@"
    local date_display=
    date_display="$( date +"$DATE_FORMAT" )"
    local filename="${PREFIX}${date_display}${SUFFIX}"
    touch "$filename"
    echo "$filename"
}

main "$@"
